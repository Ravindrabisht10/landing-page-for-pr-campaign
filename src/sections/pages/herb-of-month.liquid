<div class="ready-banner ready-banner--small">
  <div class="ccontain flex-box flex-box--vertical centered">
    <img io-img-src="{{- section.settings.product_image | img_url: '250x' -}}"
         alt="{{- section.settings.product_image -}}"
         class="ready-banner__image" />
    <p class="sub-title">Herb of the Month</p>
    <h2 class="ready-banner__title">
      {{- section.settings.title -}}
    </h2>
    <p class="ready-banner__description">
      {{- section.settings.description -}}
    </p>
    {%- unless section.settings.cta_url == blank -%}
      <a href="{{- section.settings.cta_url -}}"
         class="ready-banner__cta button button--tertiary">
        Learn More
      </a>
    {%- endunless -%}
  </div>
</div>

{% schema %}
  {
    "name": "Herb Of The Month",
    "class": "herb-of-month",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "product_image",
        "label": "Product Image",
        "info": "Should be 250px by 250px"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA URL"
      }
    ]
  }
{% endschema %}