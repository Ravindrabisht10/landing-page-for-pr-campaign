{% if videosettings.video_image %}
  {%- assign video_img = videosettings.video_image | img_url:'1920x' -%}
{% endif %}
{% if videosettings.video_clip %}
  {%- assign video_clip = videosettings.video_clip -%}
{% endif %}

{% if videosettings.video_link != blank %}  
  <section class="video">
    <div class="row contain">
      <div class="col-12">
        <a href="{{ videosettings.video_link }}" class="data-lightbox">
          {% if video_clip != blank %}
            <div class="video-container">
              <video src="{{ video_clip }}" preload="metadata" loop autoplay muted="muted" playsinline></video>
            </div>
          {% else %}
            <img loading="lazy" src="{{ video_img }}" alt="">
          {% endif %}
          <div class="video-play">
            {% include 'icon-video'  %}
          </div>
        </a>
      </div>
    </div>
  </section>
{% endif %}
