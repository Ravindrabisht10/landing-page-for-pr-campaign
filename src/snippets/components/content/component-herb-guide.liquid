{% assign herbs = blogs['herbs'].articles %}

{% if herbs != blank %}

  <section class="herb-guide">
    <div class="herb-guide-content">
      <h2>{{ herbssettings.title }}</h2>
      <p>{{ herbssettings.copy }}</p>
    </div>
    <ul class="row contain herb-list">
      {% for herb in herbs limit:18 %}
          {% assign contentImage = herb.image.src | img_url:'300x' %}
          {% unless herb.title == article.title %}
            <li class="col-6 col-md-4 col-lg-3 col-xl-2">
                <a href="{{ herb.url }}" alt="">
                <img loading="lazy" src="{{ contentImage }}" alt="{{ herb.title }} close up">
                <div class="hover-content">
                    <p>
                    <span>Learn More</span>
                    {% include 'icon-arrow-alt' %}
                    </p>
                </div>
                <p>{{ herb.title}}</p>
                </a>
            </li>
          {% endunless %}
      {% endfor %}
    </ul>
    {% if herbssettings.callout_cta_link != blank %}
      <a class="button-green" id="see-all-herbs" href="{{ herbssettings.callout_cta_link}}">{{ herbssettings.callout_cta_copy}}</a>
    {% endif %}
  </section>

{% endif %}
