			<div>
				<h5>Stone Field</h5>
				<p>Echinacea purpurea</p>
			</div>
		</div>

		<div class="marker marker-compost-annex">
			<div>
				<h5>Blue Ridge Field</h5>
				<p>California Poppy & American Skullcap</p>
			</div>
		</div>
	</div>
	{% if mapsettings.map_copy_mobile != blank %}
			<p class="d-block d-lg-none">{{ mapsettings.map_copy_mobile }}</p>
	{% endif %}
</section>


{%- if mapsettings.add_section_divider != blank -%}
  <div class="ccontain"><hr></div>
{%- endif -%}