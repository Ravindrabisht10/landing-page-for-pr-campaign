            {% endif %}
            <h3>{{multicolumncontent_settings.column_3_title }}</h3>
            {% if multicolumncontent_settings.column_3_link != blank %}
              </a>
            {% endif %}
          {% endif %}

          {% if multicolumncontent_settings.column_3_copy != blank %}
            <p>{{ multicolumncontent_settings.column_3_copy }}</p>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</section>